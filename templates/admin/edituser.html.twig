{% extends 'base.html.twig' %}

{% block title %}Edit user{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <h1 class="mt-5 mb-5 text-center">Edit User</h1>
            <div class="col-md-6 offset-md-3">
            {{ form_start(userForm) }}
                <div class="form-group text-black">
                    {{ form_label(userForm.email)}}
                    {{ form_widget(userForm.email, { "attr": {"class" : "form-control" } }) }}
                </div>
                <div class="form-group text-black">
                    {{ form_label(userForm.roles) }}
                    {{ form_widget(userForm.roles, { "attr": {"class" : "form-control" } }) }}
                </div>
                <div class="form-group text-black">
                    {{ form_label(userForm.imageFile) }}
                    {{ form_widget(userForm.imageFile, { "attr": {"class" : "form-control" } }) }}
                    
                </div>
                <div class="">
                   
                    <button class='button-13'><a href="{{ path('admin_users')}}" class="text-decoration-none text-dark"> Back</a> </button>
                     <div>
                        {{ form_label(userForm.Submit) }}
                        {{ form_widget(userForm.Submit) }}
                     </div>
                </div>
            {{ form_end(userForm) }}
            </div>
        </div>
    </div>
    {# {{form(userForm)}} #}

{% endblock %}
