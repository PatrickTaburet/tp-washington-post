<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Washington Post{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
                <link rel="stylesheet" href="{{asset('css/style.css')}}">
        {% endblock %}
      
    </head>
    <header>
        <nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home')}}" >Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Articles
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        {% if is_granted('ROLE_EDITOR') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Editor</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Profile</a>
                                <a class="dropdown-item" href="#">Article list</a>
                                <a class="dropdown-item" href="#">My Articles</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">New Article</a>
                            </div>
                        </li>
                        {% endif %}
                    </ul>
                    <div class="rightNavBar">
                        {% if app.user == false %}
                        <button class="button-13"><a href="{{ path('app_login')}}" class="text-decoration-none text-black" >LOG IN</a></button>
                        <button class="button-13"><a href="{{ path('register')}}" class="text-decoration-none text-black">SIGN IN</a></button>
                        {% endif %}

                        {% if app.user %}
                            <div class="rightNavBar">
                                You are logged in as <span class="adress"><a href="{{path('profile', {'id': app.user.id})}}">{{ app.user.userIdentifier }}</a></span>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <button  class="button-13"><a href="{{ path('admin_index')}}" class="text-decoration-none text-black">ADMIN</a></button>
                                {% endif %}
                                <button class="button-13"><a href="{{ path('app_logout') }}" class="text-decoration-none text-black">LOG OUT</a></button>
                            </div>

                        {% endif %}

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <body>
    
    {% block body %}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
    <script src="{{ asset('js/form.js') }}"></script>
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js'></script>
    </body>
</html>
